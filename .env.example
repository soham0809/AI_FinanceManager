# AI Finance Manager - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///./financial_copilot.db

# ============================================
# OLLAMA AI
# ============================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest
OLLAMA_TIMEOUT=120

# ============================================
# BACKEND SERVER
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ENVIRONMENT=production
DEBUG=false

# ============================================
# CLOUDFLARE TUNNEL (Optional)
# ============================================
# Fill these in after setting up Cloudflare Tunnel
CLOUDFLARE_TUNNEL_ID=your-tunnel-id-here
CLOUDFLARE_TUNNEL_URL=ai-finance.trycloudflare.com
